@model ExternalLoginConfirmationViewModel;

<div class="row">
    <div class="col-6 offset-md-2">
        <h1 class="text-info">Register</h1>
<form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
    <h3>Associate your @ViewData["ProviderDisplayName"] account</h3>
    <br />
    <div asp-validation-summary="All" class="text-danger"></div>
     <p>You have successfully authenticated with <strong>@ViewData["ProviderDisplayName"]. </strong>
         Please enter a username to complete your registration</p>
        
    <div class="form-group">
        <label asp-for="Email" ></label>
        <input asp-for="Email" class="form-control" placeholder="name@example.com"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="form-group">
        <div class="col-md-10 mt-2">
            <button type="submit" class="btn btn-success">Register Me</button>
        </div>
    </div>

    
</form>



    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }
    }

