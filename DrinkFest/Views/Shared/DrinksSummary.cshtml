@model Drinks;


<div class="col-12 col-md-6 col-lg-4">
             <div class="card">
                 <img src="@Model.ImageThumbnailUrl" alt="@Model.Name" class="card-img-top"/>
                 <div class="card-body">
                     <h5 class="float-end">@Model.Price.ToString("c")</h5>
                     <h5 class="card-title" style="color:#00008B">@Model.Name</h5>
                     <p class="card-text">@Model.ShortDescription</p>
                 </div>
                 <div class="addToCart text-right mb-2">
                     <p class="button">
                         <a class="btn btn-success float-end" id="cartButton"
                         asp-controller="ShoppingCart"
                             asp-action="AddToShoppingCart"
                             asp-route-drinkId="@Model.DrinkId">
                             Add to cart
                         </a>
                     </p>
                 </div>
             </div>
         </div>
